<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ksentini.projectandroid">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Pizza" android:label="@string/app_name"/>
        <activity android:name=".PizzaMenu" android:label="@string/app_name"/>
        <activity android:name=".PizzaCommande" android:label="@string/app_name"/>
        <activity android:name=".NewPizzaActivity" android:label="@string/app_name"/>
        <activity android:name=".AllPizzaActivity" android:label="@string/app_name"/>
        <activity android:name=".MyPizzaActivity" android:label="@string/app_name"/>


    </application>

</manifest>